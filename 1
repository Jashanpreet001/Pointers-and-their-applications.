#include <iostream>

int main(){
    
    int ar[5]={10,20,30,40,50};
    int *ptr;
//    ptr=&ar[0];
    //or
    ptr=ar;
    
    printf("The base address of the array is %u\n",ptr);
    
    return 0;
    
}
