#include <iostream>

int main(){
    int i;
    int ar[5]={10,20,30,40,50};
    int *ptr;
    ptr=&ar[0];
   
    printf("The base address of the array is %u\n",ptr);
   
    
    for(i=0;i<=4;i++)
    {
        printf("%d\n",*(ptr+i));
        
    }
    
    
    return 0;
    
}
